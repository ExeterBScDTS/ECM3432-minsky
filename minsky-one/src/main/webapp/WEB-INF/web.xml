<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
      version="3.1">

  <context-param>
    <param-name>minsky.camera.tirpath.default</param-name>
    <param-value>tir-samples/frame010.bin</param-value>
  </context-param>

<!-- processes to launch, e.g. to run the TIR camera -->
  <context-param>
    <param-name>minsky.process.camera.default</param-name>
    <param-value>yes dummy</param-value>
  </context-param>

  <servlet>
     <servlet-name>props</servlet-name>
     <servlet-class>minskyone.servlet.Props</servlet-class>
  </servlet>
  <servlet-mapping>
     <servlet-name>props</servlet-name>
     <url-pattern>/props/*</url-pattern>
  </servlet-mapping>   

  <servlet>
     <servlet-name>camera</servlet-name>
     <servlet-class>minskyone.servlet.Camera</servlet-class>
  </servlet>
  <servlet-mapping>
     <servlet-name>camera</servlet-name>
     <url-pattern>/camera/*</url-pattern>
  </servlet-mapping>   

  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>Test Realm</realm-name>
    <form-login-config>
       <form-login-page>/logon.html?param=test</form-login-page>
       <form-error-page>/logonError.html?param=test</form-error-page>
    </form-login-config>
  </login-config>

  <security-constraint>
    <web-resource-collection>
        <web-resource-name>samplesite</web-resource-name>
        <url-pattern>/authorised/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
        <role-name>user-role</role-name>
    </auth-constraint>
  </security-constraint>

</web-app>